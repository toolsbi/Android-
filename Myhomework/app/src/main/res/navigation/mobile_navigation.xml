<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myhomework.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myhomework.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_weather"
        android:name="com.example.myhomework.ui.weather.WeatherFragment"
        android:label="@string/title_weather"
        tools:layout="@layout/weather_fragment" />
    <fragment
        android:id="@+id/navigation_watch"
        android:name="com.example.myhomework.ui.watch.WatchFragment"
        android:label="@string/title_watch"
        tools:layout="@layout/watch_fragment" />
